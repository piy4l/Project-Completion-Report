@model List<PCRMS.Models.User>

@{
    ViewData["Title"] = "View Users";
}

<div class="container mt-5">
    <h2>View Users</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- Search Bar -->
    <form method="get" asp-route="/ViewUsers" class="mb-4">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control" placeholder="Search by username, name, or email" value="@ViewBag.SearchString" />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    <!-- Users Table -->
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Username</th>
                <th>Name</th>
                <th>Designation</th>
                <th>Email</th>
                <th>Role</th>
                <th>Created Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Name</td>
                    <td>@user.Designation</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>@user.CreatedDate.ToString("yyyy-MM-dd")</td>
                    <td>@(user.IsActive ? "Active" : "Inactive")</td>
                    <td>
                        <form asp-action="ToggleActive" asp-route-id="@user.UserId" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn @(user.IsActive ? "btn-warning" : "btn-success")">
                                @(user.IsActive ? "Deactivate" : "Activate")
                            </button>
                        </form>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#passwordModal-@user.UserId">
                            Update Password
                        </button>

                        <!-- Password Update Modal -->
                        <div class="modal fade" id="passwordModal-@user.UserId" tabindex="-1" aria-labelledby="passwordModalLabel-@user.UserId" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="passwordModalLabel-@user.UserId">Update Password for @user.Username</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <form asp-action="UpdatePassword" asp-route-id="@user.UserId" method="post">
                                        <div class="modal-body">
                                            @Html.AntiForgeryToken()
                                            <div class="mb-3">
                                                <label for="newPassword-@user.UserId" class="form-label">New Password</label>
                                                <input type="password" class="form-control" id="newPassword-@user.UserId" name="newPassword" required minlength="6" />
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-primary">Save</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { searchString = ViewBag.SearchString, page = ViewBag.CurrentPage - 1 })">Previous</a>
            </li>
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { searchString = ViewBag.SearchString, page = i })">@i</a>
                </li>
            }
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { searchString = ViewBag.SearchString, page = ViewBag.CurrentPage + 1 })">Next</a>
            </li>
        </ul>
    </nav>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}